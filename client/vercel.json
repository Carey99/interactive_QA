{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL for production deployment",
      "value": "https://your-backend.railway.app"
    }
  },
  "functions": {
    "app/**": {
      "runtime": "nodejs18.x"
    }
  }
}
